<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipe Name"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:id="@+id/recipe_title"
            android:textAlignment="center"/>


        <EditText
            android:id="@+id/author_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter Author Name"
            android:textAlignment="center"
            android:layout_below="@id/recipe_title"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ingredient_text_view"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/ingredients"
            android:overScrollMode="always"
            android:layout_below="@id/author_text"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />


        <EditText
            android:id="@+id/direction_text_view"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/directions"
            android:overScrollMode="always"
            android:layout_below="@id/ingredient_text_view"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />


        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_below="@id/direction_text_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text="Save" />

    </RelativeLayout>

</ScrollView>